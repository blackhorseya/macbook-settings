# tool aliases
alias cat=bat
alias nano=vim
alias tf=terraform

# quick open rc
alias vimrc='${=EDITOR} ~/.vimrc'
alias myclirc='${=EDITOR} ~/.myclirc'

# chia
alias chia='/Applications/Chia.app/Contents/Resources/app.asar.unpacked/daemon/chia'

alias docker-compose='docker run --rm \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v "$PWD:$PWD" \
    -w="$PWD" \
    docker/compose:1.24.0'

# git
alias gsync='gup && gfa && gbda'
alias commit='codegpt commit'

# openapi-generator-cli
alias openapi-generator-cli='docker run --rm \
                            -v "$PWD:$PWD" \
                            -w="$PWD" \
                            openapitools/openapi-generator-cli'

